package com.jetbrains.shapes.homework4;

public class TestShapes {
    public static void main(String[] args) {

        Square s=new Square(4);
        System.out.println(s);
        System.out.println("Surface of square is: "+s.calcSurface());
        System.out.println("Perimeter of square is: "+s.calcPerimeter());

        Triangle t=new Triangle(3,4,7);
        System.out.println(t);
        System.out.println("Surface of Triangle is: "+t.calcSurface());
        System.out.println("Perimeter of triangle is: "+t.calcPerimeter());

        EquilateralTriangle t2=new EquilateralTriangle(4);
        System.out.println(t2);
        System.out.println("Surface of Triangle is: "+t2.calcSurface());
        System.out.println("Perimeter of triangle is: "+t2.calcPerimeter());
    }
}
